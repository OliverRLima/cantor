<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".NewPassword">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titulo"
            android:text="Altere sua senha do MusicAll ;)"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_infoPass1"
            android:text="Informe sua senha:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="60sp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/et_senhaAtual"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="#5EFFFFFF"
            android:hint="Senha atual"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_infoPass2"
            android:text="Informe sua nova senha:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/et_senhaNova"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="#5EFFFFFF"
            android:hint="Senha nova"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_confirmarSenhaNova"
            android:text="Confirme sua nova senha:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/et_confirmarSenhaNova"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="#5EFFFFFF"
            android:hint="Redigitar senha nova"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_alterar"
            android:background="@drawable/button_registrar"
            android:text="Confirmar Alteração"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="60sp" />


        <Button
            android:id="@+id/bt_cancelar"
            android:layout_width="144dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_login"
            android:onClick="cancelar"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>