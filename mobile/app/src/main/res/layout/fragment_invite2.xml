<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".InviteFragment2">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invite1"
        >

        <ImageView
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_profile_pic" />

        <TextView
            android:id="@+id/tx_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mari - Vocalista - 20 anos - SP | Estilo Musical - Indie"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="80dp"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/bt_registrar"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_registrar"
            android:text="Aceitar"
            android:textAllCaps="false"
            android:layout_below="@id/tx_info"
            android:layout_toLeftOf="@id/bt_login"
            android:layout_marginRight="140dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_login"
            android:text="Recusar"
            android:textAllCaps="false"
            android:layout_below="@id/tx_info"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            />



    </RelativeLayout>

</FrameLayout>