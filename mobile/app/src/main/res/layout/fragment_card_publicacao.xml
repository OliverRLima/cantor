<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CardPublicacoes">

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:cardBackgroundColor="#504D49"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="31dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_profile_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mari - Vocalista - 20 anos - SP - Indie"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Procuro baixista que queira compor comigo e tocar toda quarta-feira a noite."
            android:layout_marginTop="50dp"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <ImageButton
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="80dp"
            android:background="@drawable/ic_invite" />



    </androidx.cardview.widget.CardView>

</FrameLayout>