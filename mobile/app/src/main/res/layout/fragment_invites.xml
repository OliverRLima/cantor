<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InvitesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".Invites1"
        android:visibility="visible"
        android:id="@+id/recebidos">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/button_03"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="Recebidos"
                    android:layout_alignParentLeft="true"
                    android:onClick="irRecebidos"/>




                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Enviados"
                    android:background="@drawable/button_03"
                    android:textSize="18sp"
                    android:textColor="#8BFFFFFF"
                    android:layout_alignParentRight="true"
                    android:onClick="irEnviados"/>




            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/invite1"
                >

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_profile_pic" />

                <TextView
                    android:id="@+id/tx_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mari - Vocalista - 20 anos - SP | Estilo Musical - Indie"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingLeft="80dp"
                    android:layout_marginTop="40dp"/>

                <Button
                    android:id="@+id/bt_registrar"
                    android:layout_width="125dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_registrar"
                    android:text="Aceitar"
                    android:textAllCaps="false"
                    android:layout_below="@id/tx_info"
                    android:layout_toLeftOf="@id/bt_login"
                    android:layout_marginRight="140dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />

                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="125dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_login"
                    android:text="Recusar"
                    android:textAllCaps="false"
                    android:layout_below="@id/tx_info"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>


        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".Invites2"
        android:visibility="invisible"
        android:id="@+id/enviados">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/button_03"
                    android:textSize="18sp"
                    android:textColor="#8BFFFFFF"
                    android:text="Recebidos"
                    android:layout_alignParentLeft="true"
                    android:onClick="irRecebidos"
                    />




                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Enviados"
                    android:background="@drawable/button_03"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:onClick="irEnviados"
                    />




            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>



            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/invite2">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_profile_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mari - Vocalista - 20 anos - SP | Estilo Musical - Indie"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingLeft="80dp"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Aceito"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="100dp"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_profile_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Davi - Baterista - 21 anos - SP | Estilo Musical - Rock"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingLeft="80dp"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Aceito"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="100dp"/>



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_profile_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Julia - Violonista - 22 anos - SP | Estilo Musical - MPB"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingLeft="80dp"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Pendente"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="100dp"/>



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>